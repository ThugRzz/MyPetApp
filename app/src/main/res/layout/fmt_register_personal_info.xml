<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/registration"
        android:textSize="@dimen/text_20" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:layout_marginTop="23dp"
        android:hint="@string/edit_email_hint"
        app:errorEnabled="true"
        app:errorTextColor="@android:color/holo_red_dark"
        app:hintTextColor="@color/gray_979BA8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:theme="@style/EditInputField" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:hint="@string/edit_phone_hint"
        app:errorEnabled="true"
        app:errorTextColor="@android:color/holo_red_dark"
        app:hintTextColor="@color/gray_979BA8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:singleLine="true"
            android:theme="@style/EditInputField" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:hint="@string/edit_password_hint"
        app:errorEnabled="true"
        app:errorTextColor="@android:color/holo_red_dark"
        app:hintTextColor="@color/gray_979BA8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true"
            android:theme="@style/EditInputField" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.thugrzz.mypetapp.view.RoundedButton
        android:id="@+id/btn"
        style="@style/RoundedButton.Dark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginHorizontal="@dimen/dimen_22dp"
        app:roundedButtonText="@string/registrate" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/have_account"
            android:textSize="@dimen/text_16" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/authNavigateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/come_in_underline"
            android:textColor="@color/orange_CD5334"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

    <com.thugrzz.mypetapp.view.IndicatorsView
        style="@style/DefaultIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_marginBottom="@dimen/dimen_64dp"
        app:indicatorsTotalCount="3" />
</LinearLayout>