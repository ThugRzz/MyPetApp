<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.thugrzz.mypetapp.view.TitleBarView
        android:id="@+id/titleBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="2">

        <com.thugrzz.mypetapp.view.ReferenceItemView
            android:id="@+id/feedReferenceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemDrawable="@mipmap/feed"
            android:layout_marginVertical="@dimen/padding_16"
            android:layout_marginEnd="@dimen/padding_13"
            app:itemTitle="@string/feed"/>

        <com.thugrzz.mypetapp.view.ReferenceItemView
            android:id="@+id/careReferenceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemDrawable="@mipmap/care"
            android:layout_marginVertical="@dimen/padding_16"
            android:layout_marginStart="@dimen/padding_13"
            app:itemTitle="@string/pet_care"/>

        <com.thugrzz.mypetapp.view.ReferenceItemView
            android:id="@+id/trainingReferenceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemDrawable="@mipmap/training"
            android:layout_marginVertical="@dimen/padding_16"
            android:layout_marginEnd="@dimen/padding_13"
            app:itemTitle="@string/training"/>

        <com.thugrzz.mypetapp.view.ReferenceItemView
            android:id="@+id/diseaseReferenceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemDrawable="@mipmap/disease"
            android:layout_marginVertical="@dimen/padding_16"
            android:layout_marginStart="@dimen/padding_13"
            app:itemTitle="@string/disease"/>

    </GridLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/referencesView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:paddingTop="@dimen/padding_16"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/view_reference_item" />

</LinearLayout>